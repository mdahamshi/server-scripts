
if [ -n "$1" ]
then 
	sleep $1
fi
x=$(lsblk | awk '/465/{print $1;exit}')
y=${x}1
echo mounting /dev/$y ...
mount -o nouuid /dev/$y /transcend
sleep 2
echo unmounting /dev/$y ...
umount -f /dev/$y
sleep 1
echo repairing /dev/$y ...
xfs_repair /dev/$y
if [ "$?" -eq 1 ]
then
	logger "xfsre failed to repair /dev/$y"
elif [ "$?" -eq 0 ]
then
	logger "xfsre finished successfuly."
fi

sleep 1
echo mounting /dev/$y ...
mount -o nouuid /dev/$y /transcend
